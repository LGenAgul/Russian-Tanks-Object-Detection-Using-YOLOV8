{{#> views/layouts/main}}
<main class="container-fluid main">
    {{{errorHeader}}}
    <form action="/detect" method="post" enctype="multipart/form-data" id="upload-form">
<label for="file" class="custum-file-upload">
<div class="icon">
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" class="uploadButton"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M144 480C64.5 480 0 415.5 0 336c0-62.8 40.2-116.2 96.2-135.9c-.1-2.7-.2-5.4-.2-8.1c0-88.4 71.6-160 160-160c59.3 0 111 32.2 138.7 80.2C409.9 102 428.3 96 448 96c53 0 96 43 96 96c0 12.2-2.3 23.8-6.4 34.6C596 238.4 640 290.1 640 352c0 70.7-57.3 128-128 128H144zm79-217c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l39-39V392c0 13.3 10.7 24 24 24s24-10.7 24-24V257.9l39 39c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-80-80c-9.4-9.4-24.6-9.4-33.9 0l-80 80z"/></svg>
</div>
<div class="text">
   <h3 id="upload-message">ატვირთეთ ფოტოსურათი ან ვიდეო</h3>
   </div>
   <input id="file" type="file" name="file">
</label>
  
<input type="submit" value="გაშვება" class="submit" id="submit-button" disabled="true">
    </form> 
    <div class="results">
    {{{element}}}
    </div>

    <img src="/assets/icons/loading.gif" alt="" width="50px" height="50px"  style="display: none;" id="loading">
</main>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
const $ = require('jquery');

$(document).ready(function() {
  $('#file').change(function() {
    // Get the name of the selected file
    const fileName = $(this).val().split('\\').pop();
    // Update the upload message with the file name
    $('#upload-message').text("წარმატებით აიტვირთა :/"+ fileName);
    $('#submit-button').removeAttr('disabled');
  });
});


$(document).ready(() => {
$('#submit-button').click(() =>
{
   $('#loading').removeAttr('style');
});
});

</script>

{{/views/layouts/main}}